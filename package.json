{
  "name": "generate-runtypes",
  "version": "1.1.1",
  "main": "dist/main.js",
  "repository": "git@github.com:cobraz/generate-runtypes",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "tsnd --respawn src/main.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage src/**/*",
    "test:watch": "jest --watch",
    "build": "tsc",
    "generate:docs": "typedoc --readme none --out docs src"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "{.eslintrc}": "prettier --write",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@types/faker": "^5.1.7",
    "@types/jest": "~26.0.21",
    "@types/node": "~14.14.35",
    "typedoc": "^0.20.33",
    "typedoc-plugin-markdown": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "~4.18.0",
    "@typescript-eslint/parser": "~4.18.0",
    "eslint": "~7.22.0",
    "eslint-config-prettier": "~8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "~24.3.2",
    "faker": "^5.4.0",
    "husky": "^5.1.3",
    "jest": "~26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "~26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  },
  "dependencies": {
    "runtypes": "^5.0.2",
    "ts-morph": "^10.0.1",
    "typescript": "~4.1.3"
  }
}
